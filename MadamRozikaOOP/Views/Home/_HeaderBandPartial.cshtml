@model List<MadamRozikaGlobal.Dtos.ViewDtos.NewsMenuDto>
<div class="header_top_bar">
    <form class="search" action="search.html" method="get">
        <input type="text" name="s" placeholder="Search..." value="Search..." class="search_input hint">
        <input type="submit" class="search_submit" value="">
    </form>
    <ul class="social_icons clearfix">
        <li>
            <a target="_blank" href="https://www.facebook.com/madamrozika" class="social_icon facebook" title="facebook">
                &nbsp;
            </a>
        </li>
        <li>
            <a target="_blank" href="https://www.twitter.com/madamrozika" class="social_icon twitter" title="twitter">
                &nbsp;
            </a>
        </li>
        <li>
            <a target="_blank" href="http://www.instagram.com/madamrozika" class="social_icon instagram" title="envato">
                &nbsp;
            </a>
        </li>
        <li>
            <a href="mailto:madamrozika@gmail.com" class="social_icon mail" title="mail">
                &nbsp;
            </a>
        </li>

    </ul>
    <div class="latest_news_scrolling_list_container">
        <ul>
            <li class="category">YENİLER</li>
            <li class="left"><a href="#"></a></li>
            <li class="right"><a href="#"></a></li>
            <li class="posts">
                <ul class="latest_news_scrolling_list">
                    @{
                        foreach (var item in Model)
                        {
                            <li>
                                <a href="/@item.SeoTitleUrl-@item.NewsId-haberi" title="">@item.Title</a>
                            </li>
                        }
                    }
                </ul>
            </li>
            <li class="date">
                @{
                    int i = 0;
                    foreach (var item in Model)
                    {
                        if (i == 0)
                        {
                            <abbr title="@item.ModifiedDate" class="timeago current">@item.ModifiedDate</abbr>
                        }
                        else
                        {
                            <abbr title="@item.ModifiedDate" class="timeago">@item.ModifiedDate</abbr>
                        }
                        i++;
                    }
                }
            </li>
        </ul>
    </div>
</div>