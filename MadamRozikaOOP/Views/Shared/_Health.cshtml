@model MadamRozikaGlobal.Dtos.ViewDtos.ContentBase

<h4 class="box_header">Sağlık</h4>
<ul class="blog">
    @{
        var po = Model.LatestByCategory.FirstOrDefault(x => x.Category == "Sağlık");
        if (po != null)
        {
            <li class="post">
                <a href="@Url.Action("Post", "Posts", po.NewsId)" title="@po.Title">
                    <img src="@po.ImageUrl" alt="img">
                </a>
                <h2 class="with_number">
                    <a href="@Url.Action("Post", "Posts", po.NewsId)" title="@po.Title">@po.Title</a>
                    <a class="comments_number" href="@Url.Action("Post", "Posts", po.NewsId)#comments_list" title="@po.CommentCount yorum">
                        @po.CommentCount <span class="arrow_comments"></span></a>
                </h2>
                <ul class="post_details">
                    <li class="category">
                        <a href="category_lifestyle.html" title="@po.Category">@po.Category</a>
                    </li>
                    <li class="date">
                        10:11 PM, Feb 02
                    </li>
                </ul>
                <p>@po.Summary</p>
                <a class="read_more" href="@Url.Action("Post", "Posts", po.NewsId)" title="Daha Fazlası">
                    <span class="arrow"></span><span>Daha Fazlası</span>
                </a>
            </li>
        }
    }

</ul>
<ul class="blog small clearfix">
    @{


        foreach (var pp in Model.LatestByCategory.Where(x => x.Category == "Sağlık").Take(2))
        {
            <li class="post">
                <a href="@Url.Action("Post", "Posts", po.NewsId)" title="@pp.Title">
                    <img src="@pp.ImageUrl" alt="img">
                </a>
                <div class="post_content">
                    <h5>
                        <a href="@Url.Action("Post", "Posts", po.NewsId)" title="@pp.Title">@pp.Title</a>
                    </h5>
                    <ul class="post_details simple">
                        <li class="category">
                            <a href="category_lifestyle.html" title="@pp.Category">@pp.Category</a>
                        </li>
                        <li class="date">
                            10:11 PM, Feb 02
                        </li>
                    </ul>
                </div>
            </li>
        }
    }

</ul>
<a class="more page_margin_top" href="#">Daha Fazlası</a>