    <div id="most-recent">
        <div class="horizontal_carousel_container page_margin_top">
            <ul class="blog horizontal_carousel page_margin_top autoplay-0 scroll-1 navigation-1 easing-easeInOutQuint duration-750">

                @{
                    var ix = 0;
                    foreach (var most in Model.MostRecents)
                    {
                        ix++;

                        <li class="post">
                            <a href="@Url.Action("Post", "Posts", new { nid = most.NewsId })" title="@most.Title">
                                <img src='@most.ImageUrl' alt='img'>
                            </a>
                            <h5>
                                <span class="number">@ix .</span><a href="@Url.Action("Post", "Posts", new { nid = most.NewsId })" title="@most.Summary">@most.Summary</a>
                            </h5>
                            <ul class="post_details simple">
                                <li class="category">
                                    <a href="category_health.html" title="@most.Category">@most.Category</a>
                                </li>
                                <li class="date">
                                    10:11 PM, Feb 02
                                </li>
                            </ul>
                        </li>
                    }
                }

            </ul>
        </div>
    </div>
